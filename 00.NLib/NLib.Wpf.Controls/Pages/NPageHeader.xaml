<UserControl x:Class="NLib.Wpf.Pages.NPageHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             x:Name="_ThisCtrl"
             d:DesignHeight="50"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid>
        <!--  CAPTION AREA  -->
        <Border Background="{StaticResource CaptionBackground}"
                BorderBrush="{StaticResource CaptionBorderColor}"
                BorderThickness="{StaticResource CaptionBorderThickness}"
                CornerRadius="{StaticResource CaptionBorderCornerRadius}"
                Margin="2,1">
            <TextBlock Foreground="{StaticResource CaptionForeground}"
                       FontSize="{StaticResource FontSize24}"
                       TextAlignment="Center"
                       VerticalAlignment="Center"
                       Text="{Binding PageTitle, ElementName=_ThisCtrl}" />
        </Border>
    </Grid>
</UserControl>
