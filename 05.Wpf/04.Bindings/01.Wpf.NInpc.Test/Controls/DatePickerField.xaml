<UserControl x:Class="Wpf.NInpc.Test.Controls.DatePickerField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             x:Name="_ThisCtrl"
             d:DesignWidth="150"
             mc:Ignorable="d">
    <StackPanel Orientation="Vertical" DataContext="{Binding ElementName=_ThisCtrl}">
        <TextBlock x:Name="lbHeader" Text="{Binding Caption}" />
        <DatePicker x:Name="dtDate" SelectedDate="{Binding Value}" />
    </StackPanel>
</UserControl>
