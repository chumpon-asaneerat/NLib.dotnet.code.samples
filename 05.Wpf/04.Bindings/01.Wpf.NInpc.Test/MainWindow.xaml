<Window x:Class="Wpf.NInpc.Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ctrl="clr-namespace:Wpf.NInpc.Test.Controls"
        Title="Wpf NInpc Test"
        Height="450"
        Width="800"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        mc:Ignorable="d">
    <DockPanel LastChildFill="True">
        <DockPanel x:Name="entry"
                   Margin="5"
                   LastChildFill="True"
                   DockPanel.Dock="Right"
                   Width="250">
            <!--  Buttons  -->
            <StackPanel Orientation="Horizontal"
                        DockPanel.Dock="Bottom"
                        Margin="3">
                <Button x:Name="cmdChange"
                        Content="Change"
                        Width="80"
                        Click="cmdChange_Click" />
            </StackPanel>
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                <!--  Id  -->
                <ctrl:TextBoxField DockPanel.Dock="Left"
                                   Margin="3"
                                   Width="50"
                                   Caption="Id"
                                   Value="{Binding Id}" />
                <!--  Description  -->
                <ctrl:TextBoxField DockPanel.Dock="Left"
                                   Margin="3"
                                   Width="120"
                                   Caption="Description"
                                   Value="{Binding Description}" />
            </StackPanel>
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                <!--  Received Date  -->
                <ctrl:DatePickerField DockPanel.Dock="Left"
                                      Margin="3"
                                      Width="150"
                                      Caption="Received Date"
                                      Value="{Binding ReceivedDate}" />
            </StackPanel>
            <Grid />
        </DockPanel>
        <ListView x:Name="lv"
                  Margin="5"
                  ItemsSource="{Binding}"
                  SelectionChanged="lv_SelectionChanged"
                  IsSynchronizedWithCurrentItem="True"
                  VirtualizingPanel.VirtualizationMode="Recycling"
                  VirtualizingPanel.IsVirtualizing="True"
                  VirtualizingPanel.IsContainerVirtualizable="True">
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn Header="Id">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Width="150"
                                               Text="{Binding Id}"
                                               TextAlignment="Center" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Received Date">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Width="150"
                                               Text="{Binding ReceivedDate}"
                                               TextAlignment="Center" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Description">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Width="200"
                                               Text="{Binding Description}"
                                               TextAlignment="Left" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Updated">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Width="200"
                                               Text="{Binding ChangeTime}"
                                               TextAlignment="Left" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>
    </DockPanel>
</Window>
