        <DataTemplate x:Key="SmallItemTemplate">
            <Border BorderThickness="1"
                    CornerRadius="5"
                    BorderBrush="#FF8080A0"
                    Background="#FFC0C0E0">
                <TextBlock Text="{Binding Name}"
                           Margin="10"
                           FontSize="16"
                           FontWeight="Bold" />
            </Border>
        </DataTemplate>
