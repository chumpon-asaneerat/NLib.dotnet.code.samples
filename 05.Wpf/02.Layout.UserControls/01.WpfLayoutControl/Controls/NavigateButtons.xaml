<UserControl x:Class="WpfLayoutControl.Controls.NavigateButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:util="clr-namespace:WpfLayoutControl.Utils"
             xmlns:ctrl="clr-namespace:WpfLayoutControl.Controls"
             x:Name="_ThisCtrl"
             d:DesignHeight="50"
             d:DesignWidth="1200"
             mc:Ignorable="d">
    <UserControl.Resources>
        <util:ShowButtonsConverter x:Key="ShowButtonsConverter" />
    </UserControl.Resources>
    <DockPanel LastChildFill="True" Height="Auto">
        <!--  NEW  -->
        <ctrl:InlineButton x:Name="cmdNew"
                           DockPanel.Dock="Left"
                           IconType="Add"
                           Text="New"
                           Visibility="{Binding ElementName=_ThisCtrl, Path=ShowButtons, Converter={StaticResource ShowButtonsConverter}, ConverterParameter={x:Static ctrl:FontAwesomeIcon.Add}}"
                           FontSize="{Binding ElementName=_ThisCtrl, Path=FontSize}" />
        <!--  DELETE  -->
        <ctrl:InlineButton x:Name="cmdDelete"
                           DockPanel.Dock="Left"
                           IconType="Delete"
                           Text="Delete"
                           Visibility="{Binding ElementName=_ThisCtrl, Path=ShowButtons, Converter={StaticResource ShowButtonsConverter}, ConverterParameter={x:Static ctrl:FontAwesomeIcon.Delete}}"
                           FontSize="{Binding ElementName=_ThisCtrl, Path=FontSize}" />
        <!--  SAVE  -->
        <ctrl:InlineButton x:Name="cmdSave"
                           DockPanel.Dock="Left"
                           IconType="Save"
                           Text="Save"
                           Visibility="{Binding ElementName=_ThisCtrl, Path=ShowButtons, Converter={StaticResource ShowButtonsConverter}, ConverterParameter={x:Static ctrl:FontAwesomeIcon.Save}}"
                           FontSize="{Binding ElementName=_ThisCtrl, Path=FontSize}" />
        <!--  PRINT  -->
        <ctrl:InlineButton x:Name="cmdPrint"
                           DockPanel.Dock="Left"
                           IconType="Print"
                           Text="Print"
                           Visibility="{Binding ElementName=_ThisCtrl, Path=ShowButtons, Converter={StaticResource ShowButtonsConverter}, ConverterParameter={x:Static ctrl:FontAwesomeIcon.Print}}"
                           FontSize="{Binding ElementName=_ThisCtrl, Path=FontSize}" />
        <!--  EXPORT  -->
        <ctrl:InlineButton x:Name="cmdExport"
                           DockPanel.Dock="Left"
                           IconType="Export"
                           Text="Export"
                           Visibility="{Binding ElementName=_ThisCtrl, Path=ShowButtons, Converter={StaticResource ShowButtonsConverter}, ConverterParameter={x:Static ctrl:FontAwesomeIcon.Export}}"
                           FontSize="{Binding ElementName=_ThisCtrl, Path=FontSize}" />
        <!--  Main Menu  -->
        <ctrl:InlineButton x:Name="cmdHome"
                           DockPanel.Dock="Right"
                           IconType="Home"
                           Text="Main Menu"
                           Visibility="{Binding ElementName=_ThisCtrl, Path=ShowButtons, Converter={StaticResource ShowButtonsConverter}, ConverterParameter={x:Static ctrl:FontAwesomeIcon.Home}}"
                           FontSize="{Binding ElementName=_ThisCtrl, Path=FontSize}" />
        <!--  BACK  -->
        <ctrl:InlineButton x:Name="cmdBack"
                           DockPanel.Dock="Right"
                           IconType="Back"
                           Text="Back"
                           Visibility="{Binding ElementName=_ThisCtrl, Path=ShowButtons, Converter={StaticResource ShowButtonsConverter}, ConverterParameter={x:Static ctrl:FontAwesomeIcon.Back}}"
                           FontSize="{Binding ElementName=_ThisCtrl, Path=FontSize}" />
        <Grid />
    </DockPanel>
</UserControl>
